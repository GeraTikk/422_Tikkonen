<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="130"/>
        <Setter Property="Margin" Value="12, 5"/>
        <Setter Property="FontSize" Value="9pt"/>
        <Setter Property="Background" Value="#3A506B"/>
        <Setter Property="Foreground" Value="#E9ECEF"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="#1A1F2B"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="Background" Value="#2D3748"/>
    </Style>

    <Style TargetType="Page">
        <Setter Property="Background" Value="#1A1F2B"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="#E9ECEF"/>
        <Setter Property="FontSize" Value="9pt"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#E9ECEF"/>
        <Setter Property="FontSize" Value="9pt"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="#9E9E9E"/>
        <Setter Property="FontSize" Value="9pt"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="Margin" Value="8"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="#2D3748"/>
        <Setter Property="Foreground" Value="#E9ECEF"/>
        <Setter Property="RowBackground" Value="#2D3748"/>
        <Setter Property="AlternatingRowBackground" Value="#364153"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#5B6D87"/>
        <Setter Property="Foreground" Value="#E9ECEF"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Height" Value="25"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="9pt"/>
        <Setter Property="Background" Value="#2D3748"/>
        <Setter Property="Foreground" Value="#2D3748"/>
    </Style>

</ResourceDictionary>