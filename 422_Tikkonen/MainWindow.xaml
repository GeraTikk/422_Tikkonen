<Window x:Class="_422_Tikkonen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_422_Tikkonen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
            <Button x:Name="BackButton" Content="Назад" Width="80" Height="30" 
                    Margin="10,0,0,0" VerticalAlignment="Center" Click="BackButton_Click"/>
        </StackPanel>
        
        <Frame x:Name="MainFrame" Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Margin="10"/>

        <Grid Grid.Row="2" Background="LightGray">
            <TextBlock x:Name="DateTimeNow"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Height="35"
                       Width="194"/>
        </Grid>

    </Grid>
</Window>
