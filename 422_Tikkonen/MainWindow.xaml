<Window x:Class="_422_Tikkonen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_422_Tikkonen"
        mc:Ignorable="d"
        Title="Payment System" Height="800" Width="900"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Button x:Name="BackButton"
                Grid.Row="0"
                Content="Назад"
                HorizontalAlignment="Left"
                Margin="10,0,0,0"
                Click="BackButton_Click"/>

        <!-- Комбобокс для выбора темы -->
        <ComboBox x:Name="ThemeSelector"
                  Grid.Row="0"
                  HorizontalAlignment="Right"
                  Margin="0,0,100,0"
                  SelectionChanged="ThemeSelector_SelectionChanged">
            <ComboBoxItem Content="Стандартная" Tag="Dictionary.xaml" IsSelected="True"/>
            <ComboBoxItem Content="Тёмная" Tag="DictionaryGreen.xaml"/>
        </ComboBox>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"/>

        <!-- Нижняя панель с временем -->
        <TextBlock x:Name="DateTimeNow"
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   Width="194"
                   FontFamily="Consolas"
                   FontSize="11"
                   Text="{Binding CurrentDateTime}"/>
    </Grid>
</Window>