<Page x:Class="_422_Tikkonen.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Tikkonen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница админа">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Панель администратора" 
                   HorizontalAlignment="Center" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="20"/>

        <!-- Кнопки навигации -->
        <WrapPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">

            <Button x:Name="BtnTab1" 
                    Content="Таблица пользователей" 
                    ToolTip="Кнопка для перехода на страницу таблицы пользователей" 
                    Margin="15" 
                    Click="BtnTab1_Click"/>

            <Button x:Name="BtnTab2" 
                    Content="Таблица категорий" 
                    ToolTip="Кнопка для перехода на страницу таблицы категорий" 
                    Margin="15" 
                    Click="BtnTab2_Click"/>

            <Button x:Name="BtnTab3" 
                    Content="Таблица платежей" 
                    ToolTip="Кнопка для перехода на страницу таблицы платежей" 
                    Margin="15" 
                    Click="BtnTab3_Click"/>

            <Button x:Name="BtnTab4" 
                    Content="Диаграммы" 
                    ToolTip="Кнопка для перехода на страницу диаграммы" 
                    Margin="15" 
                    Click="BtnTab4_Click"/>

        </WrapPanel>
    </Grid>
</Page>