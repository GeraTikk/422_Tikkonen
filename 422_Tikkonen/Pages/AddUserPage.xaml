<Page x:Class="_422_Tikkonen.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Tikkonen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить пользователя">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TBLogin" Text="{Binding Login}" ToolTip="Введите логин" Margin="10,0,0,0"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Пароль:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="TBPass" Text="{Binding Password}" ToolTip="Введите пароль" Margin="10,0,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Роль:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbRole" SelectedValue="{Binding Role}" ToolTip="Выберите роль" Margin="10,0,0,0">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="ФИО:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="TBFio" Text="{Binding FIO}" ToolTip="Введите ФИО" Margin="10,0,0,0"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Фото (необязательно):" VerticalAlignment="Center"/>
        <TextBox Grid.Row="8" Grid.Column="1" x:Name="TBPhoto" Text="{Binding Photo}" ToolTip="Добавьте фото" Margin="10,0,0,0"/>

        <TextBlock Grid.Row="10" Grid.Column="0" Text="Email:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="10" Grid.Column="1" x:Name="TBEmail" Text="{Binding Email}" ToolTip="Введите email" Margin="10,0,0,0"/>

        <StackPanel Grid.Row="12" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ButtonSave" Content="Сохранить" ToolTip="Кнопка сохранить" Click="ButtonSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="ButtonClean" Content="Очистить" ToolTip="Кнопка очистить" Click="ButtonClean_Click"/>
        </StackPanel>
    </Grid>
</Page>