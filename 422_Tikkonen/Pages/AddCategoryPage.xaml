<Page x:Class="_422_Tikkonen.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Tikkonen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="700"
      Title="Добавить категорию">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название категории" Margin="50,0,0,0" />
        <TextBox x:Name="TBCategoryName" Text="{Binding Name}" ToolTip="Название категории" Margin="200,0,40,0" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="ButtonSaveCategory" Content="Сохранить" ToolTip="Кнопка сохранить" Click="ButtonSaveCategory_Click" Margin="0,0,10,0"/>
            <Button x:Name="ButtonClean" Content="Очистить" ToolTip="Кнопка очистить" Click="ButtonClean_Click"/>
        </StackPanel>
    </Grid>
</Page>