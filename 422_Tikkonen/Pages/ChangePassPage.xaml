<Page x:Class="_422_Tikkonen.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Tikkonen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="800"
      Title="Смена пароля">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Логин:" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextBoxLogin" ToolTip="Введите логин или почту"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Старый пароль:" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="PBOldPass" ToolTip="Введите старый пароль"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Новый пароль:" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="PBNewPass" ToolTip="Введите новый пароль"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Подтверждение:" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <PasswordBox Grid.Row="6" Grid.Column="1" x:Name="PBNewTwoPass" ToolTip="Введите новый пароль ещё раз"/>

        <Button Grid.Row="8" Grid.ColumnSpan="2" 
                x:Name="ButtonSaveChangePassword" 
                Content="Сохранить" 
                ToolTip="Кнопка сохранения смены пароля" 
                Click="ButtonSaveChangePassword_Click" 
                HorizontalAlignment="Center"/>
    </Grid>
</Page>